<% provide(:title, "Sign in") %>

<div class="center vertical-padding-two">
	<%= form_for(:session, url: sessions_path) do |f| %>
		<%= f.text_field :email, class: "input-large" %><br/><br/>

		<%= f.password_field :password, class: "input-large" %><br/><br/>

		<%= f.submit "Sign in", class: "btn btn-default btn-lg" %><br/><br/>
	<% end %>

	New user? <%= link_to "Sign up now!", signup_path %>
</div>