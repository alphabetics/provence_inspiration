<% provide(:title, 'Sign up') %>

<div class="center vertical-padding-two">
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.text_field :email, placeholder: "email", class: "input-large" %><br/><br/>

		<%= f.password_field :password, placeholder: "password", class: "input-large" %><br/><br/>

		<%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "input-large" %><br/><br/>

		<%= f.submit "Create my account", class: "btn btn-default btn-lg" %>
	<% end %>
</div>